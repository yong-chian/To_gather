<style>
.signup-container {
  background-image: url(https://weekender.com.sg/wp-content/uploads/2016/09/rainbow-block.jpg);
  background-size: cover;
  background-position: center;
}

.signup-form {

  padding: 30px;
  border-radius: 10px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}

</style>

<div class="signup-container">
<div class="overlay"></div>
  <div class="signup-form">
    <div class="container">
    <br>
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
          <div class="card p-4 shadow-lg">
            <h2 class="text-center mb-4">Sign up</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "first-name" },
                            label_html: { class: 'form-label' },
                            label: "First Name" %>
                <%= f.input :last_name,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "last-name" },
                            label_html: { class: 'form-label' },
                            label: "Last Name" %>

                <%= f.input :home_address,
                            required: true,
                            autofocus: true,
                            label: "Home Address / Postal Code",
                            input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                            wrapper_html: {data: {controller: "address-autocomplete",
                            address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>

                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" },
                            label_html: { class: 'form-label' },
                            label: "Email" %>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" },
                            label_html: { class: 'form-label' },
                            label: "Password" %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" },
                            label_html: { class: 'form-label' },
                            label: "Password Confirmation" %>
              </div>
              <div class="form-actions text-center">
                <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
          <br>
          <br>
          <br>
        </div>
      </div>
    </div>

  </div>
</div>
