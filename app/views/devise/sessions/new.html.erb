<div></div>
<div class="row">
  <div class="row" style="margin-left: 3px;">
        <div class="col-md-6 col-lg-1 offset-lg-0 screen" style="margin-right: 8px;padding-right: 308px;"></div>
    
    <div class="col-md-6 offset-lg-5 login-form" style="padding-bottom: 26px;padding-left: 40px;padding-right: 20px;padding-top: 0px;margin-left: 48px;">
        <section class="py-4 py-xl-5">
            <div class="container">
                <div class="row mb-5">
                    <div class="col-md-8 col-xl-6 text-center mx-auto">
                            <h4>ToGather</h4>
                        </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 col-xl-4">
                        <div class="card-login mb-5">
                            <div class="card-body-login d-flex flex-column align-items-center">
                            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
                            <div class="form-inputs">
                            <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", placeholder: "Example@example.com" } %>
                            <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", placeholder: "Enter password"} %>
                            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                        </div>

                        <div class="form-actions">
                            <%= f.button :submit, "Log in" %>
                        </div>
                        <% end %>

                        <%= render "devise/shared/links" %>
                        </div>
                    </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>



