<style>
  .card-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  .card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
    padding: 20px;
  }
  .card-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .activity-card-image {
    width: 100%;
    height: 200px;
    background-size: cover;
    background-position: center;
    margin-bottom: 10px;
  }
  .card-body {
    font-size: 14px;
  }
  .card-link {
    color: #007bff;
    text-decoration: none;
  }
  .card-link:hover {
    text-decoration: underline;
  }

.row {
  display: flex;
  flex-wrap: wrap;
}
</style>

<div class="container">
  <div class="row">
    <div>
      <br>
      <h1>My Favorites</h1>
      <br>
      <br>
      <div style= "display: flex">
        <% if @favorites.any? %>
          <% @favorites.each do |favorite| %>
          <br>
          <%= render partial: 'activities/activity', locals: { activity: Activity.find(favorite.favoritable_id.to_i) } %>

          <% end %>
        <% else %>
          <p class="empty-favorites">Your watchlist is empty.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
