<div id="message-input-<%= message.id %>">
  <% if current_user.avatar.attached? %>
    <%= image_tag url_for(current_user.avatar), class: "avatar-chatroom" %>
  <% else %>
    <%= image_tag "https://www.citypng.com/public/uploads/preview/download-profile-user-round-orange-icon-symbol-png-11639594360ksf6tlhukf.png", class: "avatar-chatroom" %>
  <% end %>
  <small>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <div class="container">
    <p><%= message.content %></p>
  </div>
</div>
