<%# <h1 class="text-black"><%="#{current_user.first_name} #{current_user.last_name}"%></h1> 

<div class="row booking-card">
  <h3 class="text-black">These are your bookings</h3>
  <div class="card w-50">
    <div class="card-body">
      <% if @bookings.any? %>
        <% counter = 1 %>
        <% @bookings.each do |booking| %>
          <h5 class="card-title">Booking <%= counter %></h5>
            <p class="card-text"><strong>Activity Name:</strong> <%= booking.availability.activity.name %></p>
            <p class="card-text"><strong>Booking Date:</strong> <%= "#{booking.availability.start_time} to #{booking.availability.end_time}" %></p>
            <p class="card-text"><strong>Number of Pax:</strong> <%= booking.number_of_pax %></p>
            <p class="card-text"><strong>Booking Status:</strong> <%= booking.status %></p>
          <% counter += 1 %>
          <%= link_to "Show this booking", activity_booking_path(booking.availability.activity, booking), class: "btn btn-primary" if policy(booking).show? %> 
          <%= link_to "Chat with Host", chatroom_path(@chatroom), class: "btn btn-primary" %>
          <% end %>
        <% else %>
          <em>There's no bookings found.</em>
        <% end %>
    </div>
  </div>
  
  <div>
    <div class="card w-50">
    <h3 class="text-black">These are your hosted activity's bookings</h3>
      <div class="card booking-card-host">
        <div class="card-body booking-card-host">
        <% if @my_hostings.any? %>
          <% counter = 1 %>
          <% @my_hostings.each do |booking| %>
          <h5 class="card-title">Booking <%= counter %></h5>
          <p class="card-text"><strong>Booking Id:</strong> <%= booking.id %></p>
          <p class="card-text"><strong>Activity Name:</strong> <%= booking.availability.activity.name %></p>
          <p class="card-text"><strong>User Name:</strong> <%= booking.user_name %></p>
          <p class="card-text"><strong>Booking Date:</strong> <%= "#{booking.availability.start_time} to #{booking.availability.end_time}" %></p>
          <p class="card-text"><strong>Number of Pax:</strong> <%= booking.number_of_pax %></p>
          <p class="card-text"><strong>Booking Status:</strong> <%= booking.status %></p>
          <p class="card-text"><strong>Comment:</strong> <%= booking.comment %></p>
          <%= link_to "Show this booking", activity_booking_path(booking.availability.activity, booking), class: "btn btn-primary" if policy(booking).show? %>
          <%= link_to "Chat with Participant", chatroom_path(@chatroom), class: "btn btn-primary" %>
            <%# <%= link_to "Destroy this booking", activity_booking_destroy_path(booking.availability.activity, booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} if policy(booking).destroy? %>
          <% counter += 1 %>
          <% end %>
        <% else %>
          <em>There's no bookings found.</em>
        <% end %>
        </div>
      </div>
  </div>
</div>
