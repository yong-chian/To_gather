                  <% photo = @activity.photos.first %>
                  <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
                </div><br />
              <%= render @booking %>

            <% elsif @booking.status == "Rejected" %>
              <h3>Unfortunately, your booking has been rejected!</h3>
                <div class="activity-photos">
                  <% photo = @activity.photos.first %>
                  <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
                </div><br />
              <%= render @booking %>

            <% elsif @booking.status == "Pending Payment" %>
              <h3>You have not make the payment. The booking is expired...</h3>
              <div class="activity-photos">
                <% photo = @activity.photos.first %>
                <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
              </div><br />
              <%= render @booking %>

            <% end %>

          <% elsif @booking.completed && Date.today >= @booking.availability.start_time %>
            <% if @booking.status == "Confirmed" %>
              <h3>Congratulations, your booking is now complete! As a valued participant, we would like to invite you to share your feedback by leaving a review for the activity.</h3>
              <%= render @booking %>
              <% if !@booking.participant_reviews.present?%>
                <%= link_to "Leave a review", new_booking_participant_review_path(@booking) %>
              <% else %>
                <%= link_to "View review", booking_participant_review_path(@booking, @booking.participant_reviews.first), class: "btn btn-primary" %>
                <%= link_to "Edit review", edit_booking_participant_review_path(@booking, @participant_review), class: 'btn btn-primary w-50' if policy(@participant_review).update? %>
              <% end %>

            <% end %>

          <% else %>
            <h3>You have not make the payment. The booking is expired...</h3>
            <div class="activity-photos">
              <% photo = @activity.photos.first %>
              <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
            </div><br />
            <%= render @booking %>

          <% end %>
        </div>

      <% else %> <%# THIS IS FOR ADMIN #%>
