              <%= render @booking %>
              <%= button_to "Request for cancellation and refund", [@activity, @booking], params: {booking: {comment: "Cancellations Requested"}}, method: :patch if policy(@booking).edit? %>

            <% elsif @booking.status == "Cancelled" %>
