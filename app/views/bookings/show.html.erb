            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>
          <%= button_to "Request for cancellation and refund", [@activity, @booking], params: {booking: {comment: "Cancellations Requested"}}, method: :patch, class: 'btn btn-primary w-50' if policy(@booking).edit? %>

        <% elsif @booking.status == "Confirmed" %>
