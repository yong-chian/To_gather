          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% elsif @booking.status == "Confirmed" %>
          <h3>You have completed the activity. Please mark the activity as completed!</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>
          <%= button_to "Mark as completed", [@activity, @booking], params: {booking: {completed: true, status: "Completed"}}, method: :patch, class: "btn btn-primary w-50" if policy(@booking).status? %>

        <% elsif @booking.status == "Cancelled" %>
          <h3>This booking has been cancelled!</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% elsif @booking.status == "Rejected" %>
          <h3>You've rejected this booking!</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% elsif @booking.status == "Pending Payment" %>
        <% end %>

          <% elsif @booking.completed && Date.today >= @booking.availability.start_time %>
            <% if @booking.status == "Confirmed" %>
              <h3>Booking has been confirmed!</h3>
              <div class="activity-photos">
                <% photo = @activity.photos.first %>
                <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
              </div><br />
              <%= render @booking %>
              <%= link_to "View review", booking_participant_review_path(@booking, @booking.participant_reviews.first), class: "btn btn-primary" %>

            <% end %>

      <% else %>
      <%# show nothing when the user booking is pending and not paid %>
      <% end %>
    </div>

  <% elsif policy(@booking).participant? %>
    <div>
      <% if !@booking.completed && Date.today < @booking.availability.start_time %>
