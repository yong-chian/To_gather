          <%= render @booking %>

        <% elsif @booking.status == "Confirmed" %>
          <h3>You have completed the activity. Please wait while your booking is confirmed as completed!</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% elsif @booking.status == "Cancelled" %>
          <h3>Your booking has been cancelled!</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% elsif @booking.status == "Rejected" %>
          <h3>Unfortunately, your booking has been rejected!</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% elsif @booking.status == " Payment" %>
          <h3>The booking has expired as payment has not been made yet.</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>

        <% end %>

      <% elsif @booking.completed && Date.today >= @booking.availability.start_time %>
        <% if @booking.status == "Confirmed" %>
          <h3>Your booking is completed! You may leave a review for the activity</h3>
          <div class="activity-photos">
            <% photo = @activity.photos.first %>
            <%= cl_image_tag photo.key, height: 150, width: 250, crop: :fill %>
          </div><br />
          <%= render @booking %>
          <% if !@booking.participant_reviews.present?%>
            <%= link_to "Leave a review", new_booking_participant_review_path(@booking), class: 'btn btn-primary w-50' %>
          <% else %>
          <%# show nothing when the user booking is pending and not paid %>
          <% end %>
        </div>

      <% elsif policy(@booking).participant? %>
        <div>
          <% if !@booking.completed && Date.today < @booking.availability.start_time %>
            <% if @booking.status == "Pending Payment" %>
              <h3>Hi, thank you for your booking! Please check out to reserve your spot!</h3>
              <div class="activity-photos">
