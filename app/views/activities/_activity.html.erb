<div id="<%= dom_id activity %>" class="activity-card col-sm-3">
  <div class="activity-image-container">
    <% if user_signed_in? %>
      <div data-controller="favorite">
        <%= link_to favorite_activity_path(activity), data: {turbo_method: :post, action: "click->favorite#update"} do %>
          <i class="fa-heart <%= current_user.favorited?(activity) ? "fa-solid" : "fa-regular" %>" data-favorite-target="bookmark"></i>
        <% end %>
      </div>
    <% else %>
    <% end %>

    <div class="activity-card-image" style="background-image: url(<%= cl_image_path activity.photos.sample.key %>)"></div>
  </div>

  <div class="activity-details">
    <h2 class="activity-name"><%= activity.name %></h2>
      <p class="activity-host" style="display: inline-block">
      Hosted by
      <strong><%= activity.user.first_name %></strong>
    <span class="circle circle--4 circle--gray ml-1 mr-1 align-middle"></span>
    At <strong><%= activity.meeting_location.sub(/,\s*Singapore$/, '') %></strong>
    </p>

    <p class="activity-description" style="color: grey"><%= activity.description %></p>


    <%# <p class="activity-policies">
      <strong>Policies:</strong> <%= activity.policies %>
    <%# </p> %>

    <p class="activity-price" style="font-size: 18px; color: grey;">
      <strong><%= humanized_money_with_symbol(activity.price) %> Total</strong>
    </p>


    <div class="activity-buttons">

      <%= link_to "View Activity", activity_path(activity), class: "btn btn-primary" %>

    </div>

  </div>

</div>
