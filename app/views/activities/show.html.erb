<div container>

    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <%= render "activity", activity: @activity %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 photo-center mx-auto">
        <% @activity.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 photo-center mx-auto">
        <h2>Reviews</h2>
        <% if @reviews.present? %>
          <% @reviews.each do |review| %>
          <div class="review">
              <p><strong>User Name:</strong> <%= review.user_name %></p>
              <p><strong>Rating:</strong> <%= review.rating %></p>
              <p><strong>Content:</strong> <%= review.content %></p>
        <%# <p><%= link_to "Edit", edit_booking_review_path(@booking, review) %></p>
        <%# <p><%= link_to "Delete", booking_review_path(@booking, review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %></p>
            </div>
        <% end %>
      <% else %>
        <p>No reviews yet.</p>
      <% end %>.
      </div>
    </div>

  <%#= form_with url: orders_path do %>
    <%#= hidden_field_tag 'activity_id', @activity.id %>
    <%#= submit_tag 'Purchase', class: 'btn btn-primary' %>
  <%# end %>


<div class="container px-4">
  <div class="row gx-5">
    <div class="col">
      <div class="p-1 border">
        <% if policy(@activity).edit? %>
          <%= link_to "Edit this activity", edit_activity_path(@activity) %>
        <% end %>
      </div>
    </div>

  <div class="col">
    <div class="p-1 border">
      <%= link_to "Back to activities", activities_path %>
    </div>
  </div>

  <div class="col">
    <div class="p-1 border">
      <%= button_to "Destroy this activity", @activity, method: :delete if policy(@activity).destroy? %>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-8 col-xl-6 text-center mx-auto">
      <h1>New booking</h1>
      <%= render "/bookings/form", activity: @activity, booking: @booking %>
    </div>
  </div>
</div>
