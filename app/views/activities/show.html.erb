<div container>

    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <%= render "activity", activity: @activity %>
      </div>
<div class="activity-details">
  <h2 class="activity-title"><%= @activity.name %></h2>
  <p class="activity-price">Price: <%= humanized_money_with_symbol(@activity.price) %></p>
  <%= render "activity", activity: @activity %>
</div>

<div class="activity-photos">
  <h2 class="activity-photo-title">Photos</h2>
  <% @activity.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</div>


<div class="faqs">
  <h2>FAQs from the Community</h2>
  <% activity = Activity.find(1) %>
  <ul class="faqs-list">
    <% activity.faqs.each do |faq| %>
      <li>
        <div class="question">
          <strong>Question:</strong> <%= faq.question %>
        </div>
        <div class="answer">
          <strong>Answer:</strong> <%= faq.answer %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<h2>Reviews</h2>
<% if @reviews.present? %>
  <% @reviews.each do |review| %>
    <div class="review">
      <p><strong>User Name:</strong> <%= review.user_name %></p>
      <p><strong>Rating:</strong> <%= review.rating %></p>
      <p><strong>Content:</strong> <%= review.content %></p>
      <%# <p><%= link_to "Edit", edit_booking_review_path(@booking, review) %></p>
      <%# <p><%= link_to "Delete", booking_review_path(@booking, review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %></p>
    </div>

    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 photo-center mx-auto">
        <% @activity.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 photo-center mx-auto">
        <h2>Reviews</h2>
        <% if @reviews.present? %>
          <% @reviews.each do |review| %>
          <div class="review">
              <p><strong>User Name:</strong> <%= review.user_name %></p>
              <p><strong>Rating:</strong> <%= review.rating %></p>
              <p><strong>Content:</strong> <%= review.content %></p>
        <%# <p><%= link_to "Edit", edit_booking_review_path(@booking, review) %></p>
        <%# <p><%= link_to "Delete", booking_review_path(@booking, review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %></p>
            </div>
        <% end %>
      <% else %>
        <p>No reviews yet.</p>
      <% end %>.
      </div>
    </div>

  <%#= form_with url: orders_path do %>
    <%#= hidden_field_tag 'activity_id', @activity.id %>
    <%#= submit_tag 'Purchase', class: 'btn btn-primary' %>
  <%# end %>


<div class="container px-4">
  <div class="row gx-5">
    <div class="col">
      <div class="p-1 border">
        <% if policy(@activity).edit? %>
          <%= link_to "Edit this activity", edit_activity_path(@activity) %>
        <% end %>
      </div>
    </div>

  <div class="col">
    <div class="p-1 border">
      <%= link_to "Back to activities", activities_path %>
    </div>
  </div>

  <div class="col">
    <div class="p-1 border">
      <%= button_to "Destroy this activity", @activity, method: :delete if policy(@activity).destroy? %>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-md-8 col-xl-6 text-center mx-auto">
      <h1>New booking</h1>
      <%= render "/bookings/form", activity: @activity, booking: @booking %>
    </div>
  </div>
</div>
