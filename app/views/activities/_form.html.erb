<div class="centered-form">
  <%= simple_form_for(activity, data: { controller: "activity-flatpickr" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :price %>
  </div>

  <div class="form-inputs">
    <%= f.input :max_capacity %>
  </div>

  <div class="form-inputs">
    <%= f.input :availabilities_start_time, multiple: true, input_html: { data: { activity_flatpickr_target: "availabilities" } } %>
  </div>

  <div class="form-inputs">
    <%= f.input :meeting_location %>
  </div>

  <div class="form-inputs">
    <%= f.input :minimum_age %>
  </div>

  <div class="form-inputs">
    <%= f.input :policies %>
  </div>

   <div class="form-inputs">
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,class: "btn-success" %>
  </div>

<% end %>
</div>
