<div class="navbar navbar-expand-sm navbar-light navbar-togather">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= "ToGather" %>
    <% end %>
    
    <%# do %>
      <%# <%= image_tag "ToGather.png" %>
    <%# <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "About Us", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Find Activity", activities_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Share Moments", "#", class: "nav-link" %>
